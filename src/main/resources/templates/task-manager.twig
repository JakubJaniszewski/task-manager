<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="description" content="Simple task manager">
        <meta name="keywords" content="task, manager, todo">
        <meta name="author" content="Jakub Janiszewski">
        <title>Task Manager</title>

        <!-- STYLESHEETS-->
        <link rel="stylesheet" type="text/css" href="/static/css/reset.css">
        <link rel="stylesheet" type="text/css" href="/static/css/style.css">
        <link href="https://fonts.googleapis.com/css?family=Droid+Sans|Lato" rel="stylesheet">

        <script src="https://use.fontawesome.com/0dc27d5e41.js"></script>

        <!-- JAVASCRIPT -->
        <script type="text/javascript" src="/static/js/drag_drop.js"></script>
    </head>
    <body>
        <!-- SECTION HEADER-->
        <header>
            <div class="horizontal-bar" id="top-bar">
                <h1>Task Manager</h1>
            </div>
        </header>

        <!-- MAIN CONTAINER-->
        <main>
            <div class="container">
                <div class="task-box" id="taskspool" ondrop="drag_drop(event)" ondragover="return false">
                    <h2>Tasks Pool</h2>
                    {% for task in tasks %}
                        {% if task.getTaskboxId() == 0 %}
                            <button id="{{ task.getId() }}" draggable="true" ondragstart="drag_start(event)"> {{ task.getName() }}</button>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="task-box" id="second-user-taskbox" ondrop="drag_drop(event)" ondragover="return false">
                    <h2>User 2</h2>
                    {% for task in tasks %}
                        {% if task.getTaskboxId() == 2 %}
                            <button id="{{ task.getId() }}" draggable="true" ondragstart="drag_start(event)"> {{ task.getName() }}</button>
                        {% endif %}
                    {% endfor %}
                    <p class="task-box-number">2</p>
                </div>
                <div class="task-box" id="first-user-taskbox" ondrop="drag_drop(event)" ondragover="return false">
                    <h2>User 1</h2>
                    {% for task in tasks %}
                        {% if task.getTaskboxId() == 1 %}
                            <button id="{{ task.getId() }}" draggable="true" ondragstart="drag_start(event)"> {{ task.getName() }}</button>
                        {% endif %}
                    {% endfor %}
                    <p class="task-box-number">1</p>
                </div>
                <div class="task-box" id="third-user-taskbox" ondrop="drag_drop(event)" ondragover="return false">
                    <h2>User 3</h2>
                    {% for task in tasks %}
                        {% if task.getTaskboxId() == 3 %}
                            <button id="{{ task.getId() }}" draggable="true" ondragstart="drag_start(event)"> {{ task.getName() }}</button>
                        {% endif %}
                    {% endfor %}
                    <p class="task-box-number">3</p>
                </div>
            </div>
        </main>


        <!-- SECTION FOOTER-->
        <footer>
            <div class="horizontal-bar" id="bottom-bar">
                <p>Jakub Janiszewski <i class="fa fa-copyright" aria-hidden="true"></i></p>
                <div class="socials">
                    <a href="https://github.com/JakubJaniszewski" target="_blank"><button class="icon-btn github"><i class="fa fa-github" aria-hidden="true"></i></button></a>
                    <a href="https://www.facebook.com/jakub.janiszewski.925" target="_blank"><button class="icon-btn facebook"><i class="fa fa-facebook"></i></button></a>
                </div>
            </div>
        </footer>
    </body>
</html>